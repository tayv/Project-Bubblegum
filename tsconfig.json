{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["app/components/*"],
      "@form/*": ["app/components/form/*"],
      "@formControl/*": ["app/components/form/formControl/*"],
      "@formActions/*": ["app/components/form/formActions/*"],
      "@ui/*": ["app/components/ui/*"],
      "@templates/*": ["app/components/templates/*"],
      "@uiTemplates/*": ["app/components/templates/uiTemplates/*"],
      "@buildDoc/*": ["app/components/buildDoc/*"],

      "@contexts/*": ["app/contexts/*"],
      "@hooks/*": ["app/hooks/*"],
      "@utils/*": ["app/utils/*"],
      "@styles/*": ["styles/*"],
      "@product1/*": ["app/product1/*"],
      "@product2/*": ["app/product2/*"],

      // Page Router
      "@docs/*": ["pages/docs/*"],
      "@restricted/*": ["pages/restricted/*"] // private pages for authenticated users
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
