{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@form/*": [
        "app/components/form/*"
      ],
      "@formControl/*": [
        "app/components/form/formControl/*"
      ],
      "@formActions/*": [
        "app/components/form/formActions/*"
      ],
      "@ui/*": [
        "app/components/ui/*"
      ],
      "@hooks/*": [
        "app/hooks/*"
      ],
      "@utilities/*": [
        "app/utils/*"
      ],
      "@product1/*": [
        "app/product1/*"
      ],

      // Page Router
      "@designSystem/*": [
        "designSystem/*"
      ],
      "@atoms/*": [
        "designSystem/atoms/*"
      ],
      "@molecules/*": [
        "designSystem/molecules/*"
      ],
      "@organisms/*": [
        "designSystem/organisms/*"
      ],
      "@forms/*": [
        "designSystem/forms/*"
      ],
      "@layouts/*": [
        "designSystem/layouts/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@helpers/*": [
        "designSystem/molecules/*"
      ],
      "@templates/*": [
        "designSystem/templates/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@docs/*": [
        "pages/docs/*"
      ],
      "@restricted/*": [
        "pages/restricted/*"
      ] // private pages for authenticated users
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "designSystem/molecules/Breadcrumbs.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
